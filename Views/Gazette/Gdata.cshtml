@{
    ViewData["Title"] = "Gazzet Data ";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-8"><h4>Gazzet Data <b>List</b></h4></div>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <partial name="~/Views/Shared/_GazzetSearchPartial.cshtml" />
    </div>
</div>
<div class="row" id="divresult">
    <div class="col-lg-12">
        <div class="card">
            <div class="col-sm-12" style="padding:20px">
                <div id="result"></div>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#divresult").hide();
            $("#GNatureId").select2({
                placeholder: "Select Nature",
                theme: "bootstrap4",
                escapeMarkup: function (m) {
                    return m;
                }
            });
            $("#GazzetId").select2({
                placeholder: "Select Type",
                theme: "bootstrap4",
                escapeMarkup: function (m) {
                    return m;
                }
            });
            $("#PartId").select2({
                placeholder: "Select Part",
                theme: "bootstrap4",
                escapeMarkup: function (m) {
                    return m;
                }
            });
            $("#Year").select2({
                placeholder: "Select Year",
                theme: "bootstrap4",
                escapeMarkup: function (m) {
                    return m;
                }
            });
            $("#DepartmentId").select2({
                placeholder: "Select Department",
                theme: "bootstrap4",
                escapeMarkup: function (m) {
                    return m;
                }
            });

            $("#btnSearch").click(function () { GetGazzetData() });
        });
        function loadData() {
            $('#viewAll').load('/Litigation/CaseTracking/LoadAll');
        }
        function GetGazzetData() {
            var search = {
                GNatureId: $("#GNatureId").val(),
                Category: $("#GazzetId").val(),
                part_section: $("#PartId").val(),
                Year: $("#Year").val(),
                Department: $("#DepartmentId").val(),
            };

            $.ajax({
                url: '/Gazette/SearchEGazzet',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: JSON.stringify(search),
                success: function (result) {
                    $("#result").append(result);
                    $("#divresult").show();
                },
                error: function (err) {
                    alert(err.statusText);
                }
            });
        }
    </script>
}