@model IEnumerable<Advocate.Models.NavigationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-8"><h4>Menu <b>List</b></h4></div>
    <div class="col-sm-4">
        <button type="button" onclick="location.href='@Url.Action("Create", "navigation")'" class="btn btn-info btn-style float-lg-right"><i class="fa fa-plus"></i> Add New</button>
    </div>
</div>

<hr />
<table class="table menutable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Controller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsExternal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExternalUrl)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MenuName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Controller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsExternal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExternalUrl)
            </td>
            <td>
                <a class="edit" asp-action="Edit" asp-route-id="@item.Id" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                <a class="detail" asp-action="Details" asp-route-id="@item.Id" title="Detail" data-toggle="tooltip"><i class="material-icons">description</i></a>
                <a class="delete" asp-action="Delete" asp-route-id="@item.Id" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".menutable").dataTable({

            });
        });
    </script>
}


