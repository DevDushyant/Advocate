@model IEnumerable<Advocate.Dtos.NotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-8"><h4>Notification <b>List</b></h4></div>
    <div class="col-sm-4">
        <button type="button" onclick="location.href='@Url.Action("create", "notification")'" class="btn btn-info btn-style float-lg-right"><i class="fa fa-plus"></i> Add New</button>
    </div>
</div>
<hr />
<table class="table cell-border" id="tblNotification" cellspacing="0">
    <thead>
        <tr>
            <th style="width:5% !important">Sr.No. </th>
            <th style="width:10% !important">Notification Type</th>
            <th style="width:10% !important">Rule</th>
            @*<th style="width:10% !important">Notification Name</th>*@
            <th style="width:45% !important">Notification No.</th>
            <th style="width:45% !important">Notification Date</th>
            <th style="width:20% !important" align="center" class="nosort">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
        {
            <tr>
                <td>@(@item.Index+1)</td>
                <td>@item.Data.NotificationType</td>
                <td>@item.Data.Rule</td>
                <td>@item.Data.NotificationNo</td>
                <td>@item.Data.NotificationDate</td>
                <td>
                    <a class="edit" onclick="checkactnature(@item.Data.Id)" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                    <a class="detail" asp-action="Details" asp-route-id="@item.Data.Id" title="Detail" data-toggle="tooltip"><i class="material-icons">description</i></a>
                    <a class="delete" asp-action="Delete" asp-route-notificationId="@item.Data.Id" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="~/js/list_notification.js"></script>
}


