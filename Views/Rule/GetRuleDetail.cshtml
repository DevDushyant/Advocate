    @if (Model.RuleBookList != null)
    {
        <fieldset>
            <legend>Rule Book Detail</legend>
            <table @*style="width:100%!important; padding-left:50px;border-block-color:coral;border-width:thin;"*@>
                <thead>
                    <tr>
                        <th style="width:5%!important">Sr.</th>
                        <th style="width:20%!important">Name</th>
                        <th style="width:10%!important">Year</th>
                        <th style="width:10%!important">Volume</th>
                        <th style="width:10%!important">Page Number</th>
                        <th style="width:10%!important">Serial Number</th>

                    </tr>
                </thead>
                <tbody>
                    @{ int count = 0;}
                    @foreach (var item in Model.RuleBookList)
                    {
                        <tr>
                            <td>@{ count++;}@count</td>
                            <td>@item.BookaName</td>
                            <td>@item.Year</td>
                            <td>@item.Volume</td>
