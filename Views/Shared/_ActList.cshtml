@*@if (ViewBag.AcessType != "notactcategory")
{*@
    <style>
        #ddlactTypeFilter select.form-control {
            display: inline;
            width: 200px;
            margin-left: 25px;
        }

        .split {
            height: 80%;
            width: 80%;
            position: fixed;
            z-index: 1;
            top: 0;
            overflow-x: hidden;
            padding-top: 20px;
        }

        .left {
            left: 0;
            background-color: #111;
        }

        .right {
            right: 0;
            background-color: red;
        }

        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }
    </style>


    <table class="table acttypetable" id="tblActTable">
        <thead>
            <tr>
                <th></th>
                <th>Act Type</th>
                <th>Act No</th>
                <th>Act Year</th>
                <th>Act Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @ViewBag.Act)
            {
                <tr>
                    <td><input type="checkbox" id="chk_@item.Id" class="chkall"><input type="hidden" value="@item.Id"></td>
                    <td>@item.ActType</td>
                    <td>@item.ActNumber</td>
                    <td>@item.ActYear</td>
                    <td>@item.ActName</td>
                </tr>
            }
        </tbody>
    </table>

